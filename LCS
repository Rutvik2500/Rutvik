#include <stdio.h>
#include <string.h>

// Function to find the maximum of two numbers
int max(int a, int b) {
    return (a > b) ? a : b;
}

// Function to compute the LCS
void LCS(char X[], char Y[]) {
    int m = strlen(X);
    int n = strlen(Y);

    int L[m + 1][n + 1];  // DP table

    // Build the LCS DP table
    for (int i = 0; i <= m; i++) {
        for (int j = 0; j <= n; j++) {
            if (i == 0 || j == 0)
                L[i][j] = 0;
            else if (X[i - 1] == Y[j - 1])
                L[i][j] = L[i - 1][j - 1] + 1;
            else
                L[i][j] = max(L[i - 1][j], L[i][j - 1]);
        }
    }

    // Length of LCS
    int length = L[m][n];
    printf("Length of LCS: %d\n", length);

    // Reconstruct the LCS string
    char lcs[length + 1];
    lcs[length] = '\0';  // Null-terminate

    int i = m, j = n, index = length - 1;
    while (i > 0 && j > 0) {
        if (X[i - 1] == Y[j - 1]) {
            lcs[index--] = X[i - 1];
            i--; j--;
        }
        else if (L[i - 1][j] > L[i][j - 1])
            i--;
        else
            j--;
    }

    printf("LCS is: %s\n", lcs);
}

int main() {
    char X[100], Y[100];

    printf("Enter first string: ");
    scanf("%s", X);
    printf("Enter second string: ");
    scanf("%s", Y);

    LCS(X, Y);

    return 0;
}
